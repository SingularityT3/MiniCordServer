datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String               @id @default(auto()) @map("_id") @db.ObjectId
  username      String               @unique
  password      String
  creationTime  DateTime             @default(now())
  sent          Friend[]             @relation("UserSent")
  received      Friend[]             @relation("UserReceived")
  conversations ConversationMember[]
  messages      Message[]
}

model Friend {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  sender      User      @relation("UserSent", fields: [senderId], references: [id])
  senderId    String    @db.ObjectId
  recipient   User      @relation("UserReceived", fields: [recipientId], references: [id])
  recipientId String    @db.ObjectId
  sendTime    DateTime  @default(now())
  acceptTime  DateTime?
}

model Conversation {
  id           String               @id @default(auto()) @map("_id") @db.ObjectId
  creationTime DateTime             @default(now())
  members      ConversationMember[]
  messages     Message[]
}

model ConversationMember {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String       @db.ObjectId
  user           User         @relation(fields: [userId], references: [id])
  userId         String       @db.ObjectId
  joinTime       DateTime     @default(now())
  leaveTime      DateTime?
}

model Message {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  author         User         @relation(fields: [authorId], references: [id])
  authorId       String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String       @db.ObjectId
  sendTime       DateTime     @default(now())
  content        String
}
